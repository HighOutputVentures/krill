{
  "name": "krilljs",
  "version": "0.0.8",
  "description": "microservice framework",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rm -rf dist/",
    "build": "npm run clean && babel --out-dir dist/ src/",
    "lint": "eslint src/",
    "test": "npm run build && ava"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:kugtong33/krill.git"
  },
  "keywords": [
    "microservice"
  ],
  "author": "Arjay Sitoy <sitoy.arjay@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kugtong33/krill/issues"
  },
  "homepage": "https://github.com/kugtong33/krill#krilljs",
  "dependencies": {
    "ajv": "^4.11.3",
    "amqplib": "^0.5.1",
    "babel-polyfill": "^6.23.0",
    "bluebird": "^3.4.7",
    "couchbase": "^2.3.2",
    "debug": "^2.6.1",
    "koa": "^2.2.0",
    "koa-bodyparser": "^3.2.0",
    "koa-compose": "^3.2.1",
    "koa-logger": "^2.0.1",
    "koa-router": "^7.0.1",
    "lodash": "^4.17.4",
    "redis": "^2.6.5",
    "sendgrid": "^4.7.1",
    "uuid": "^3.0.1"
  },
  "devDependencies": {
    "ava": "^0.19.1",
    "babel-cli": "^6.23.0",
    "babel-core": "^6.23.1",
    "babel-eslint": "^7.2.2",
    "babel-plugin-transform-builtin-extend": "^1.1.2",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-env": "^1.1.8",
    "cz-conventional-changelog": "^1.2.0",
    "eslint": "^3.14.1",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-babel": "^4.0.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.9.0"
  },
  "ava": {
    "files": [
      "test/*.js"
    ],
    "source": [
      "src/**/*.js"
    ],
    "concurrency": 5,
    "failFast": true,
    "failWithoutAssertions": true,
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
