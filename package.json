{
  "name": "krilljs",
  "version": "0.1.12",
  "description": "microservice framework",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist/",
    "build": "npm run clean && babel --out-dir . src/",
    "lint": "eslint .",
    "test": "ava",
    "test-coverage": "nyc ava",
    "install": "babel --out-dir . src/"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:kugtong33/krill.git"
  },
  "keywords": [
    "microservice"
  ],
  "author": "Arjay Sitoy <sitoy.arjay@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kugtong33/krill/issues"
  },
  "homepage": "https://github.com/kugtong33/krill#krilljs",
  "dependencies": {
    "ajv": "^4.11.3",
    "arque": "^0.3.3",
    "babel-polyfill": "^6.23.0",
    "bluebird": "^3.4.7",
    "debug": "^2.6.1",
    "koa": "^2.2.0",
    "koa-bodyparser": "^3.2.0",
    "koa-compose": "^3.2.1",
    "koa-logger": "^2.0.1",
    "koa-router": "^7.0.1",
    "lodash": "^4.17.4",
    "mailgun-js": "^0.11.2",
    "request": "^2.81.0",
    "request-promise": "^4.2.1",
    "uuid": "^3.0.1"
  },
  "devDependencies": {
    "ava": "^0.19.1",
    "babel-cli": "^6.23.0",
    "babel-core": "^6.23.1",
    "babel-eslint": "^7.2.2",
    "babel-plugin-transform-builtin-extend": "^1.1.2",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-env": "^1.1.8",
    "cz-conventional-changelog": "^1.2.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-babel": "^4.0.1",
    "eslint-plugin-import": "^2.7.0",
    "gulp": "^3.9.1",
    "gulp-shell": "^0.6.3",
    "nyc": "^11.0.3",
    "supertest": "^3.0.0"
  },
  "ava": {
    "files": [
      "test/**/*.test.js"
    ],
    "source": [
      "src/**/*.js"
    ],
    "timeout": "50s",
    "failFast": true,
    "failWithoutAssertions": true,
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
